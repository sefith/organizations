<%- include('./partials/header') %>

    <h2> Add new Posting to paras</h2>
    <div class="posting-form">
        <form>
            <label>Job Title</label>
            <input type="text" required>
            <label>Type of Hiring</label>
            Lateral Hiring: <input type="radio">
            Campus Drive: <input type="radio">
            <br>
            <label>Position Type</label>
            <input type="radio"> Full Time 
            <input type="radio"> Internship
            <input type="radio"> Part Time
            <input type="radio"> Contract
            <input type="radio"> Volunteer
            <br>
            <label>About the Role</label>
            <textarea rows="5" cols="40"></textarea>
            <br>
            <label>Responsibilities</label>
            <textarea rows="5" cols="40"></textarea>
            <br>
            <label>Eligibility Criteria</label>
            <textarea rows="5" cols="40"></textarea>
            <br>
            <label>Remuneration/Perks</label>
            <textarea rows="5" cols="40"></textarea>
            <label>Location</label>
            <input type="text">
            <br>
            <label>Last Date to Apply</label>
            <input type="date">
            <br>
            <label>Duration</label>
            <br>
            <label>Start Date</label>
            <input type="date">
            <label>End Date</label>
            <input type="date">
            <br>
            <label>Keywords</label>
            <input type="text"><input type="text"><input type="text"><input type="text"><input type="text">
            <button>Preview</button>
            <br>
            <button type="submit">Post</button>
        </form>
    </div>



